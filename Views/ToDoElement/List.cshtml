@{
}
@model List<Todo.Web.Models.Entities.ToDoElement>
<h1>Active Tasks</h1>

<table class ="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.IsCompleted</td>
                <td>
                    <a>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>    