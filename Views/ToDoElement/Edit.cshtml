@{
}
@model Todo.Web.Models.Entities.ToDoElement
<h1>Edit Task</h1>

@if (Model == null)
{
    <p>No task was found with this id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-lable">Title</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <!-- hidden input to hold the Id -->
        <input type="hidden" asp-for="Id" />

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Completed" asp-for="IsCompleted" />
            <label class="form-check-label" for="Completed">Completed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="submit" class="btn btn-danger ms-3"
                            asp-action="Delete"
                    asp-controller="ToDoElement"
                    asp-route-id="@Model.Id">
                Delete
            </button>
        </div>
    </form>
}

