@model Todo.Web.Models.AddElementViewModel

<h1>Add Task</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-lable">Title</label>
        <input type="text" class="form-control" asp-for="Title"/>
    </div>

    <div class="mt-3">
        <input type ="checkbox" class="form-check-input" id="Completed" asp-for="IsCompleted" />
        <label class="form-check-label" for="Completed">Completed</label>
    </div>

    <div class ="mt-3">
        <button type ="submit" class="btn btn-primary">Add Task</button>
    </div>
</form>